<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundYellow"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IMAGE PICKER"
        android:fontFamily="@font/satoshi_bold"
        android:textSize="25sp"
        android:textColor="@color/standardBlack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.05"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/image_wrapper"
        android:layout_width="320dp"
        android:layout_height="320dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        android:outlineAmbientShadowColor="@color/imageContainerShadowColor"
        android:outlineSpotShadowColor="@color/imageContainerShadowColor"
        android:backgroundTint="@color/imageContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.35">

        <ImageView
            android:id="@+id/image_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/aux_image_message"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        android:fontFamily="@font/satoshi_regular"
        android:textColor="@color/standardBlack"
        android:text="click on the button below to pick a random image"
        android:textSize="20dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/image_wrapper"
        app:layout_constraintEnd_toEndOf="@id/image_wrapper"
        app:layout_constraintBottom_toBottomOf="@id/image_wrapper"
        app:layout_constraintStart_toStartOf="@id/image_wrapper" />

    <ProgressBar
        android:id="@+id/image_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="gone"
        android:elevation="15dp"
        android:indeterminateTint="@color/pickerButtonBackground"
        app:layout_constraintTop_toTopOf="@id/image_wrapper"
        app:layout_constraintEnd_toEndOf="@id/image_wrapper"
        app:layout_constraintBottom_toBottomOf="@id/image_wrapper"
        app:layout_constraintStart_toStartOf="@id/image_wrapper"
        tools:visibility="visible"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/pick_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/pickerButtonBackground"
        app:rippleColor="@color/pickerButtonRipple"
        android:text="Pick a pic"
        android:fontFamily="@font/satoshi_regular"
        android:textSize="25sp"
        android:textColor="@color/standardWhite"
        android:paddingHorizontal="30dp"
        android:paddingVertical="15dp"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.9"/>

</androidx.constraintlayout.widget.ConstraintLayout>